@using Bookstoria.Models.Admins;
@model AdminAddBookViewModel;
@{
    ViewData["Title"] = "AddBook";
}

<h1>AddBook</h1>

<form asp-action="AddBook" method="post">

    <div class="row">
        <div class="col-2">
            Book Title
        </div>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="Title" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            Book Author
        </div>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="Author" />
        </div>
    </div>

    <div class="row">
        <div class="col-10"></div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>